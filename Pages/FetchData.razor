@page "/fetchdata"

@using blazor.Data
@inject PeopleService MyPeopleService

<h1>Star Wars Characters</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (people == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name </th>
                <th>Birth Year</th>
                <th>Gender</th>
                <th>Hair Color</th>
                <th># Films</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in people.Results)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Birth_Year</td>
                    <td>@person.Gender</td>
                    <td>@person.Hair_Color</td>
                    <td>@person.Films.Count</td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn btn-primary" @onclick="GetPrevious">Previous</button>
<button class="btn btn-primary" @onclick="GetNext">Next</button>


@code {
    private People people;

    protected override async Task OnInitializedAsync()
    {
       await LoadData(String.Empty);
    }


    private async Task LoadData(string url)
    {
        people = await MyPeopleService.GetPeopleAsync(url);
        await InvokeAsync(() => StateHasChanged())
                        .ConfigureAwait(false);

    }

    private async void GetNext()
    {
        await LoadData(people.Next);
    }

     private async void GetPrevious()
    {
        await LoadData(people.Previous);
    }
}
